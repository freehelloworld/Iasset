<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <!-- angularjs -->
    <script src="~/Scripts/angularJs1.5.10/angular.min.js"></script>
    <script src="~/Scripts/angularJs1.5.10/angular-route.min.js"></script>
    <script src="~/Scripts/angularJs1.5.10/angular-animate.min.js"></script>
    <script src="~/Scripts/angularJs1.5.10/angular-resource.min.js"></script>
</head>
<body>
    <div class="container body-content">
        @RenderBody()

    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
